    "stripe": "^20.3.0",
    "swiper": "^12.0.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@tailwindcss/postcss": "^4.1.18",
