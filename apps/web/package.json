  "private": true,
  "scripts": {
    "dev": "next dev --port 3000",
    "postinstall": "prisma generate --schema=../api/prisma/schema.prisma",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "check-types": "next typegen && tsc --noEmit",
